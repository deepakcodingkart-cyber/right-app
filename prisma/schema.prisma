generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/shopify_app"
}

model order_subscription_log {
  id        Int        @id @default(autoincrement())
  order_id  String
  status    log_status
  step      String
  payload   Json
  createdAt DateTime   @default(now())
}

model session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

enum log_status {
  SUCCESS
  FAIL
}
